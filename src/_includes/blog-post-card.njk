<article class="group">
  <div class="flex items-start space-x-6">
    <div class="text-sm text-gray-400 font-mono mt-1 min-w-[2rem]">
      {{ post.data.id or loop.index0 + 1 | string | padStart(2, '0') }}
    </div>
    <div class="flex-1">
      <div class="mb-2">
        <time class="text-sm text-gray-400" datetime="{{ post.date | htmlDateString }}">
          {{ post.date | readableDate }}
        </time>
      </div>
      <h2 class="text-xl font-semibold text-foreground mb-3 group-hover:text-primary transition-colors">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </h2>
      <p class="text-gray-200 leading-relaxed">
        {{ post.data.excerpt or post.data.description }}
      </p>
    </div>
  </div>
</article>
